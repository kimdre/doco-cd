{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dependencyDashboardLabels": ["dependencies"],
  "labels": ["dependencies"],
  "timezone": "Europe/Berlin",
  "schedule": ["after 3am and before 7am"],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "2 days"
    },
    {
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "1 days"
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchFileNames": ["docker-compose.yml"],
      "pinDigests": false
    },
    {
      "description": "Disable built-in Go version updates from gomod manager",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"],
      "enabled": false
    },
    {
      "description": "Group Go version updates from go.mod and Dockerfile",
      "groupName": "golang",
      "matchDatasources": ["golang-version", "docker"],
      "matchDepNames": ["golang"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Match Go version in go.mod",
      "fileMatch": ["(^|/)go\\.mod$"],
      "matchStrings": ["\\ngo (?<currentValue>[^\\n]+)\\n"],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "go-mod-directive"
    },
    {
      "customType": "regex",
      "description": "Match golang image version in Dockerfile",
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": ["FROM golang:(?<currentValue>[^@\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker"
    }
  ]
}
