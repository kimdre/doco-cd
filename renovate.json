{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dependencyDashboardLabels": ["dependencies"],
  "labels": ["dependencies"],
  "timezone": "Europe/Berlin",
  "schedule": ["after 3am and before 7am"],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "2 days"
    },
    {
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "1 days"
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchFileNames": ["docker-compose.yml"],
      "pinDigests": false
    },
    {
      "description": "Disable built-in Go version updates from gomod manager",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"],
      "enabled": false
    },
    {
      "description": "Group Go version updates from go.mod and Dockerfile",
      "groupName": "golang",
      "matchDepNames": ["golang"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Match Go version in go.mod using Docker datasource",
      "managerFilePatterns": ["go\\.mod$"],
      "matchStrings": ["(?m)^go (?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "golang",
      "packageNameTemplate": "golang",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
